<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
 PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<typeAliases>
		<typeAlias alias="NewsItem" type="com.oliver.models.NewsItem"/>
		<typeAlias alias="NewsContent" type="com.oliver.models.NewsContent"/>
		<typeAlias alias="Paragraph" type="com.oliver.models.Paragraph"/>
		<typeAlias alias="Picture" type="com.oliver.models.Picture"/>
	</typeAliases>
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="com.mysql.jdbc.Driver" />
				<property name="url" value="jdbc:mysql://127.0.0.1:3306/spider" />
				<property name="username" value="root" />
				<property name="password" value="root" />
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<mapper resource="com/oliver/models/NewsItemMapper.xml" />
		<mapper resource="com/oliver/models/NewsContentMapper.xml" />
		<mapper resource="com/oliver/models/ParagraphMapper.xml" />
	    <mapper resource="com/oliver/models/PictureMapper.xml" />
	</mappers>
</configuration>